class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        while(head!=NULL && head->val==val){
            head=head->next;//jab head pr hi value hogi 
        }
        ListNode* temp=head;//create temp if val!=head;
        while(temp!=NULL && temp->next!=NULL){
            if(temp->next->val==val){
                temp->next=temp->next->next;  
                }
                else{
                    temp=temp->next;
                }
        }
        return head;
    }
};
**********linked list is palindrome or not****************
class Solution {
public:
    bool isPalindrome(ListNode* head) {
        stack<int> s;
        ListNode* temp=head;
        while(temp!=NULL){
            s.push(temp->val);
            temp=temp->next;
        }
        temp=head;
        while(!s.empty()){
        if(s.top() != temp->val){
            return false;
        }
        else{
            s.pop();
            temp=temp->next;
        }
        }
        return true;
    }
};
**************Delete Node without head Pointer***********
class Solution {
public:
    void deleteNode(ListNode* node) {
        node->val=node->next->val;//copying the next node to current node
        ListNode* temp=node->next;
        node->next=node->next->next;//connecting node after jumping one from curr node
        delete temp;//deleting the duplicate 
    }
};
**************Reverse Linked List II**************
class Solution {
public:
    ListNode* reverseBetween(ListNode* head, int left, int right) {
       if(head==NULL || head->next==NULL){
        return head;
        }
        ListNode* dummy = new ListNode(0);
         dummy->next=head;
        ListNode* prev=dummy;
        for(int i=1; i<left; i++){
            prev=prev->next;
        }
        ListNode* curr= prev->next;
        for(int j=1; j<=right-left; j++){
            ListNode* temp=prev->next;
            prev->next=curr->next;
            curr->next=curr->next->next;
            prev->next->next=temp;
        }
        return dummy->next;
    }
};
*******Reverse Vowel in  a String*************
class Solution {
public:
    bool isVowel(char ch){
        return ch=='a'|| ch=='e'|| ch=='i'||ch=='o'||ch=='u'|| ch=='A'||ch=='E'||ch=='I'|| ch=='O'||ch=='U';
    }
    string reverseVowels(string s) {
        //reversing the vowel in the string
        int st=0;
        int end=s.length()-1;
        while(st<end){
            while(st<end && !isVowel(s[st])){
                st++;
            }
            while(st<end && !isVowel(s[end])){
                end--;
            }
            swap(s[st],s[end]);
            st++;
            end--;
        } 
        return s;
    }
};
***************Binary Search*************
class Solution {
public:
    int searchInsert(vector<int>& nums, int target) {
        int st=0;
        int end=nums.size()-1;
        while(st<=end){
          int mid=st+(end-st)/2;//take care of overflow
          if(nums[mid]==target){
            return mid;
          }
          else if(nums[mid]>target){
            //move to left side;
            end=mid-1;
          }
          else {
            //move to right side
            st=mid+1;
          }
        }
        return st;//index at which element can be inserted if present
    }
};
