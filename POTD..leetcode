        return nums.back();//due to 2n=4 and n=2
    }
};
***********Maximum matrix sum****************1975
class Solution {
public:
    long long maxMatrixSum(vector<vector<int>>& matrix) {
        int n = matrix.size();
        long long sum = 0;
        int countnegatives = 0;
        int smallestabsolutevalue = INT_MAX;

        for(int i = 0; i < n; i++){
            for(int j = 0; j < n; j++){
                sum += abs(matrix[i][j]);

                if(matrix[i][j] < 0){
                    countnegatives++;
                }

                smallestabsolutevalue =
                    min(smallestabsolutevalue, abs(matrix[i][j]));
            }
        }  

        if(countnegatives % 2 == 0){
            return sum;
        }
        return sum - 2LL * smallestabsolutevalue;
    }
};

