*********Combination Sum*********
class Solution {
public:
    set<vector<int>> s; // to store unique combinations

    void getAllcombination(vector<int>& arr, int idx, int tar,
                           vector<vector<int>>& ans, vector<int>& combin) {
        if (idx == arr.size() || tar < 0)
            return;

        if (tar == 0) {
            if (s.find(combin) == s.end()) {
                ans.push_back(combin);
                s.insert(combin);
            }
            return;
        }

        // include current element (once or multiple times)
        combin.push_back(arr[idx]);
        getAllcombination(arr, idx, tar - arr[idx], ans, combin);   // multiple allowed
        combin.pop_back();

        // exclude current element
        getAllcombination(arr, idx + 1, tar, ans, combin);
    }

    vector<vector<int>> combinationSum(vector<int>& arr, int tar) {
        vector<vector<int>> ans;
        vector<int> combin;
        sort(arr.begin(), arr.end()); // helps avoid unnecessary duplicates
        getAllcombination(arr, 0, tar, ans, combin);
        return ans;
    }
};
********Fizz Buzz*****************
class Solution {
public:
    vector<string> fizzBuzz(int n) {
        vector<string> ans;
        int i=1;
        while(n>=i){
            if(i%3==0 && i%5==0){
               ans.push_back("FizzBuzz");
            }
            else if(i%3==0){
                ans.push_back("Fizz");
            }
            else if(i%5==0){
                ans.push_back("Buzz");
            }
            else{
                ans.push_back(to_string(i));
            }
            i++;
        }
        return ans;
    }
};
***********Longest harmonious substring****************
class Solution {
public:
    int findLHS(vector<int>& nums) {
        unordered_map<int,int> mp;
        int result=0;
        for(int i=0; i<nums.size(); i++){
            mp[nums[i]]++;
        }
        for(int j=0; j<nums.size(); j++){
            int minNum = nums[j];
            int maxNum = nums[j]+1;
            if(mp.count(maxNum)){
                result = max(result, mp[minNum]+mp[maxNum]);
            }
        }
        return result;
    }
};
**********four Divisor**************1390
class Solution {//BRUTE FORCE O(n^2)
public:
    int sumFourDivisors(vector<int>& nums) {
        int maxsum=0;
        for(int i=0; i<nums.size(); i++){
            int sum=0;
            int count=0;
            for(int j=1; j<=nums[i]; j++){
              if(nums[i]%j==0){
                sum = sum + j;//sum of divisor
                count++;
              }
            }
            if(count==4){
                maxsum=maxsum+sum;
            }
        }
        return maxsum;
    }
};
class Solution { //---->T.c O(n + sqrt(n))<------
public:
    int findSumdivisor(int num){
        int divisor=0;//count
        int sum=0;//sum of divisor
        for(int fact=1; fact*fact<=num; fact++){//perfect sqr case
            if(num%fact==0){
                int other=num/fact;
                if(other==fact){
                    divisor +=1;
                    sum +=fact;
                }
                else{
                    divisor +=2;
                    sum += (fact + other);
                }
            }
            if(divisor>4)//Invalid case
                return 0;
        }
            return  divisor==4 ? sum : 0;
    }
    int sumFourDivisors(vector<int>& nums) {
        int result=0;
        for(int &num : nums){
            result += findSumdivisor(num);
        }

            return result;  
    }
};
