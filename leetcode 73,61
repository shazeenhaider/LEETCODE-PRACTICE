************SEt Matrix Zeroes**********
class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        //approach--I
        //first we make a temp matrix make changes in it
        //copy the temp to original 
        int m=matrix.size();//rows
        int n=matrix[0].size();//column
        vector<vector<int>> temp=matrix;//copying the vector
        for(int i=0; i<m; i++){
            for(int j=0; j<n; j++){
                if(matrix[i][j]==0){
                    for(int k=0; k<n; k++){
                        temp[i][k]=0;//mark ith row 0
                    }
                    for(int k=0; k<m; k++){
                        temp[k][j]=0;//marking jth col 0
                    }
                }
            }
        }
        matrix=temp;
    }
};
************Maximum consecutive ones***********485
class Solution {
public:
    int findMaxConsecutiveOnes(vector<int>& nums) {
        int n =nums.size();
        int maxcount=0;
        int count=0;
        for(int right=0; right<n; right++){
            if(nums[right]==1){
                count++;
                maxcount=max(maxcount,count);
                
            }
            else{
                count=0;
            }
        }
        return maxcount;
    }
};
____________________>>>>>>> II
class Solution {
public:
    int findMaxConsecutiveOnes(vector<int>& nums) {
        int left = 0;
        int zeroCount = 0;
        int maxLen = 0;

        for (int right = 0; right < nums.size(); right++) {
            if (nums[right] == 0)
                zeroCount++;

            while (zeroCount > 1) {
                if (nums[left] == 0)
                    zeroCount--;
                left++;
            }

            maxLen = max(maxLen, right - left + 1);
        }

        return maxLen;
    }
};
//with optimization of storing the index of last zero occur
------------------->III---->1004
class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int left = 0;
        int zeroCount = 0;
        int maxLen = 0;

        for (int right = 0; right < nums.size(); right++) {
            if (nums[right] == 0)
                zeroCount++;

            while (zeroCount > k) {
                if (nums[left] == 0)
                    zeroCount--;
                left++;
            }

            maxLen = max(maxLen, right - left + 1);
        }

        return maxLen;
    }
};
*********Rotate list**********61
class Solution {
public:
    ListNode* rotateRight(ListNode* head, int k) {

        // ---------- Step 1: Handle edge cases ----------
        if (head == NULL || head->next == NULL || k == 0)
            return head;

        // ---------- Step 2: Find length and last node ----------
        ListNode* tail = head;
        int len = 1;                // start from 1 because head is already counted

        while (tail->next != NULL) {
            tail = tail->next;
            len++;
        }

        // ---------- Step 3: Normalize k ----------
        k = k % len;
        if (k == 0)
            return head;

        // ---------- Step 4: Make the list circular ----------
        tail->next = head;

        // ---------- Step 5: Find new tail ----------
        // new tail is (len - k - 1)th node
        int stepsToNewTail = len - k;
        ListNode* newTail = head;

        for (int i = 1; i < stepsToNewTail; i++) {
            newTail = newTail->next;
        }

        // ---------- Step 6: Set new head ----------
        ListNode* newHead = newTail->next;

        // ---------- Step 7: Break the circular link ----------
        newTail->next = NULL;

        return newHead;
    }
};

